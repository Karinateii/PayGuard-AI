@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar
@inject PayGuardAI.Web.Services.CurrentUserService CurrentUser
@inject ITenantContext TenantContext
@inject IDbContextFactory<PayGuardAI.Data.ApplicationDbContext> DbFactory
@inject AuthenticationStateProvider AuthStateProvider
@implements IAsyncDisposable
@using Microsoft.AspNetCore.SignalR.Client
@using Microsoft.EntityFrameworkCore
@using PayGuardAI.Web.Hubs
@using PayGuardAI.Core.Entities

<MudThemeProvider Theme="_theme" IsDarkMode="_isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<AuthorizeView>
    <Authorized>
        <MudLayout>
            <MudAppBar Elevation="1" Dense="true">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
                <MudText Typo="Typo.h5" Class="ml-2 ml-sm-3 d-flex align-center flex-wrap-nowrap">
                    <MudIcon Icon="@Icons.Material.Filled.Security" Class="mr-1 mr-sm-2 d-none d-sm-flex" Size="Size.Medium" />
                    <span style="font-size: 0.95rem; font-weight: 600;">PayGuard AI</span>
                </MudText>
                @if (!string.IsNullOrEmpty(_organizationName) && _organizationName != "My Organization")
                {
                    <MudChip T="string" Size="Size.Small" Color="Color.Primary" Variant="Variant.Outlined" Class="ml-3 d-none d-sm-flex">
                        <MudIcon Icon="@Icons.Material.Filled.Business" Size="Size.Small" Class="mr-1" />
                        @_organizationName
                    </MudChip>
                }
                <MudSpacer />
                <MudText Typo="Typo.body2" Class="mr-4 d-none d-md-flex">Cross-Border Fintech Hackathon 2026</MudText>
                @if (_hubConnection?.State == HubConnectionState.Connected)
                {
                    <MudChip T="string" Size="Size.Small" Color="Color.Success" Class="mr-2">
                        <MudIcon Icon="@Icons.Material.Filled.Wifi" Size="Size.Small" Class="mr-1" />
                        Live
                    </MudChip>
                }
                <MudTooltip Text="@(_isDarkMode ? "Switch to Light Mode" : "Switch to Dark Mode")">
                    <MudIconButton Icon="@(_isDarkMode ? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)" 
                                   Color="Color.Inherit" 
                                   OnClick="@ToggleTheme" />
                </MudTooltip>
                
                <MudMenu Icon="@Icons.Material.Filled.Person" Color="Color.Inherit" Dense="true" Class="mr-2">
                    <MudMenuItem>
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.body2" Style="font-weight: 600;">@CurrentUser.UserName</MudText>
                            <MudText Typo="Typo.caption" Color="Color.Secondary">@CurrentUser.PrimaryRole</MudText>
                        </MudStack>
                    </MudMenuItem>
                    <MudDivider />
                    <MudMenuItem Icon="@Icons.Material.Filled.Person" Href="/profile">My Profile</MudMenuItem>
                    <MudMenuItem Icon="@Icons.Material.Filled.Security" Href="/mfa/setup">Setup MFA</MudMenuItem>
                    <MudDivider />
                    <MudMenuItem Icon="@Icons.Material.Filled.Logout" OnClick="@SignOut">Sign Out</MudMenuItem>
                </MudMenu>
                
                <MudBadge Content="@_notificationCount" Color="Color.Error" Overlap="true" Visible="@(_notificationCount > 0)">
                    <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Inherit" />
                </MudBadge>
            </MudAppBar>

            @if (_isImpersonating)
            {
                <MudPaper Elevation="0" Class="d-flex align-center justify-center pa-2"
                          Style="background-color: #f57c00; color: white; position: sticky; top: 48px; z-index: 1099;">
                    <MudIcon Icon="@Icons.Material.Filled.Visibility" Size="Size.Small" Class="mr-2" />
                    <MudText Typo="Typo.body2" Style="font-weight: 600; color: inherit;">
                        Viewing as: @(_organizationName ?? TenantContext.TenantId)
                    </MudText>
                    <MudButton Variant="Variant.Outlined"
                               Size="Size.Small"
                               Class="ml-4"
                               Style="color: white; border-color: white;"
                               StartIcon="@Icons.Material.Filled.ArrowBack"
                               OnClick="SwitchBackToHomeTenant">
                        Back to my org
                    </MudButton>
                </MudPaper>
            }

            <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
                <MudDrawerHeader Class="d-flex flex-column" Style="padding-bottom: 8px;">
                    <MudText Typo="Typo.h6" Class="mb-0">@(_organizationName ?? "PayGuard AI")</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">@TenantContext.TenantId</MudText>
                </MudDrawerHeader>
                <NavMenu />
            </MudDrawer>

            <MudMainContent Class="pt-16 px-4">
                <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-4">
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </Authorized>
    <NotAuthorized>
        <MudLayout>
            <MudMainContent>
                @Body
            </MudMainContent>
        </MudLayout>
    </NotAuthorized>
</AuthorizeView>

@code {
    private bool _drawerOpen = true;
    private bool _isDarkMode = true;
    private int _notificationCount = 0;
    private string? _organizationName;
    private string? _homeTenantId;
    private bool _isSuperAdmin;
    private bool _isImpersonating => _isSuperAdmin
        && !string.IsNullOrEmpty(_homeTenantId)
        && !string.IsNullOrEmpty(TenantContext.TenantId)
        && _homeTenantId != TenantContext.TenantId;
    private HubConnection? _hubConnection;

    protected override async Task OnInitializedAsync()
    {
        await LoadHomeTenant();
        await LoadOrganizationName();
        await SetupSignalRConnection();
    }

    private async Task LoadHomeTenant()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            _homeTenantId = user?.FindFirst("tenant_id")?.Value;
            _isSuperAdmin = user?.IsInRole("SuperAdmin") ?? false;
        }
        catch
        {
            _homeTenantId = null;
            _isSuperAdmin = false;
        }
    }

    private async Task LoadOrganizationName()
    {
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            db.SetTenantId(TenantContext.TenantId);
            var settings = await db.OrganizationSettings.FirstOrDefaultAsync();
            _organizationName = settings?.OrganizationName;
        }
        catch
        {
            _organizationName = null;
        }
    }

    private async Task SetupSignalRConnection()
    {
        _hubConnection = new HubConnectionBuilder()
            .WithUrl(NavigationManager.ToAbsoluteUri("/hubs/transactions"))
            .WithAutomaticReconnect()
            .Build();
        
        _hubConnection.On<TransactionNotification>("NewTransaction", (notification) =>
        {
            _notificationCount++;
            
            var severity = notification.RiskLevel switch
            {
                RiskLevel.Critical => Severity.Error,
                RiskLevel.High => Severity.Warning,
                _ => Severity.Info
            };
            
            var riskText = notification.RiskLevel >= RiskLevel.High ? $"⚠️ {notification.RiskLevel} Risk" : notification.RiskLevel.ToString();
            
            Snackbar.Add(
                $"New Transaction: {notification.Amount:C0} ({notification.SourceCountry}→{notification.DestinationCountry}) - {riskText} (Score: {notification.RiskScore})", 
                severity, 
                config => { 
                    config.VisibleStateDuration = 5000;
                    config.ShowCloseIcon = true;
                });
            
            InvokeAsync(StateHasChanged);
        });
        
        _hubConnection.Reconnecting += (ex) =>
        {
            InvokeAsync(StateHasChanged);
            return Task.CompletedTask;
        };
        
        _hubConnection.Reconnected += (connectionId) =>
        {
            InvokeAsync(StateHasChanged);
            return Task.CompletedTask;
        };
        
        try
        {
            await _hubConnection.StartAsync();
            var tenantId = TenantContext.TenantId;
            if (!string.IsNullOrEmpty(tenantId))
            {
                await _hubConnection.InvokeAsync("JoinTenantGroup", tenantId);
            }
            await InvokeAsync(StateHasChanged);
        }
        catch
        {
            // SignalR will auto-reconnect via WithAutomaticReconnect()
        }
    }

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void ToggleTheme()
    {
        _isDarkMode = !_isDarkMode;
    }
    
    public async ValueTask DisposeAsync()
    {
        if (_hubConnection is not null)
        {
            await _hubConnection.DisposeAsync();
        }
    }

    private readonly MudTheme _theme = new()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#1976D2",
            Secondary = "#00BFA5",
            AppbarBackground = "#1976D2"
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#1E88E5",
            Secondary = "#00BFA5",
            AppbarBackground = "#1E3A5F",
            Surface = "#1E2A38",
            Background = "#121B24",
            DrawerBackground = "#1A2530"
        }
    };

    private void SwitchBackToHomeTenant()
    {
        // Navigate to the API endpoint which clears the session and redirects to /
        NavigationManager.NavigateTo("/api/Auth/stop-impersonating", forceLoad: true);
    }

    private void SignOut()
    {
        NavigationManager.NavigateTo("/api/Auth/logout", forceLoad: true);
    }
}
