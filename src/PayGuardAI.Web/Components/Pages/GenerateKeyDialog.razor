<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="_keyName" Label="Key Name" Required="true"
                      Variant="Variant.Outlined" Placeholder="e.g. Production, Staging, Dev" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled"
                   OnClick="Submit" Disabled="@(string.IsNullOrWhiteSpace(_keyName))">
            Generate
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance? MudDialog { get; set; }

    private string _keyName = string.Empty;

    private void Cancel() => MudDialog?.Cancel();
    private void Submit() => MudDialog?.Close(DialogResult.Ok(_keyName));
}
